<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5 flex flex-col items-center">
    <div class="flex justify-between items-center px-4 w-full md:mt-[0.4rem]">
      <a class="text-base text-blue-500 md:text-xs" href="/profile"><i class="ri-arrow-left-s-line"></i> Profile</a>
      <h2 class="leading-none text-base md:hidden">Upload Post</h2>
      <a class="text-base md:text-xl" href="/feed"><i class="ri-home-line"></i> Home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-24 h-24 rounded-full border-2 border-zinc-800 flex items-center justify-center sm:w-28 sm:h-28 md:border-4">
        <i class="text-5xl font-light ri-image-line"></i>
      </div>
      <button id="selectpic" class="text-blue-500 capitalize md:text-lg">select picture</button>
    </div>
    <form id="uploadform" action="/upload" class="w-full px-6 py-3 mt-10 flex flex-col items-center md:text-lg md:mt-16" enctype="multipart/form-data" method="post">
        <input hidden type="file" name="image" required>
        <textarea class="px-2 py-1 w-[21rem] bg-black border-2 h-20 border-zinc-800 resize-none rounded-md outline-none sm:w-[30rem] sm:py-2 md:w-[33rem]" placeholder="Write a caption..." name="caption"></textarea>
        <input class="w-[21rem] px-2 py-2 bg-blue-500 rounded-md cursor-pointer sm:w-[30rem] md:w-[33rem]" type="submit" value="Post">
    </form>
  </div>

  <script>
    document.querySelector("#selectpic")
    .addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
    });
  </script>
<% include ./partials/footer.ejs %>